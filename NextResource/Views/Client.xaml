<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NextResource.Views.Client">
    <ContentPage.Content>
        <StackLayout>
            <Label Text=" Pagina del Cliente" />

            <Label Text=" Name "   
                 FontSize="Medium" 
                TextColor="Black"  />
            <Entry x:Name="name"/>

            <Label Text=" LastName "
                 FontSize="Medium" 
                TextColor="Black"  />
            <Entry x:Name="lastname"/>
            
            <Label Text=" Identification "   
                 FontSize="Medium" 
                TextColor="Black"  />
            <Entry x:Name="id"/>

            <Label Text=" Address "
                 FontSize="Medium" 
                TextColor="Black"  />
            <Entry x:Name="address" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>